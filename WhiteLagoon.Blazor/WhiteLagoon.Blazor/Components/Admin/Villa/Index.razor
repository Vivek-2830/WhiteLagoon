@page "/Villa"
@using WhiteLagoon.Application.Services.Interface
@inject IVillaService VillaService

<PageTitle>Villa List</PageTitle>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Villa List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a href="villa/create" class="btn btn-secondary">
                    <i class="oi oi-plus-circle"></i> Create New Villa
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>Price</th>
                    <th>Sqft</th>
                    <th>Occupancy</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var villa in villas)
                {
                    <tr>
                        <td>@villa.Name</td>
                        <td>@villa.Price</td>
                        <td>@villa.Sqft</td>
                        <td>@villa.Occupancy</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                 

                                <a class="btn btn-success mx-2"  href="villa/update/@villa.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger mx-2"  href="/villa/delete/@villa.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@code {
    private IEnumerable<Villa> villas;

    protected override void OnInitialized()
    {
        villas = VillaService.GetAllVillas();
    }

    
}

